generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id             String   @id @default(uuid())
  fullName       String
  email          String   @unique
  password       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  isActive       Boolean  @default(true)
  isAdmin        Boolean  @default(false)
  isUserVerified Boolean  @default(false)

  bankDetails BankDetails?
  cart        Cart[]
  wishlist    Wishlist[]
  coupons     CouponUser[]
  addresses   Address[]
  orders      Order[]
  reviews     Review[]
  returns     Return[]

  @@map("user")
}

model BankDetails {
  id                String   @id @default(uuid())
  bankName          String
  accountHolderName String
  ifsc              String
  branchName        String
  accountNumber     String
  userId            String   @unique
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("bankdetails")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  isActive    Boolean  @default(true)
  isFeatured  Boolean? @default(false)
  description String?
  slug        String?  @unique
  parentId    String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  parent                 Category?        @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children               Category[]       @relation("CategoryHierarchy")
  masterCategoryProducts Product[]        @relation("MasterCategory")
  lastCategoryProducts   Product[]        @relation("LastCategory")
  coupons                CouponCategory[]

  @@index([parentId])
  @@index([slug])
  @@index([isActive])
  @@map("category")
}

model Product {
  id            String  @id @default(uuid())
  productName   String
  shortDesc     String?
  longDesc      String?
  mainImage     String
  productImages String? @db.LongText
  youtubeLink   String?

  metaData Json?

  masterCategoryId String
  lastCategoryId   String?

  masterCategory Category  @relation("MasterCategory", fields: [masterCategoryId], references: [id], onDelete: Cascade)
  lastCategory   Category? @relation("LastCategory", fields: [lastCategoryId], references: [id], onDelete: SetNull)

  isFeatured        Boolean @default(false)
  isBestSelling     Boolean @default(false)
  isNewCollection   Boolean @default(false)
  isActive          Boolean @default(true)
  hasCashOnDelivery Boolean @default(true)
  isReturn          Boolean @default(true)

  hasVariants Boolean          @default(false)
  variants    ProductVariant[]

  buyingPrice        Float?
  maximumRetailPrice Float?
  sellingPrice       Float?
  quantity           Int       @default(0)
  size               String?
  expiryDate         DateTime?
  dimensions         Json?

  isRelatedItem Boolean    @default(false)
  paymentType   String?
  sizeChartId   String?
  sizeChart     SizeChart? @relation(fields: [sizeChartId], references: [id], onDelete: SetNull)

  cart       Cart[]
  wishlist   Wishlist[]
  coupons    CouponProduct[]
  orderItems OrderItem[]
  reviews    Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([masterCategoryId])
  @@index([lastCategoryId])
  @@index([isFeatured])
  @@index([isBestSelling])
  @@index([isActive])
  @@index([productName])
  @@map("product")
}

model ProductVariant {
  id        String @id @default(uuid())
  productId String

  sku         String  @unique
  variantName String?

  color String?
  size  String?

  dimensions Json?
  attributes Json?

  variantImages      String? @db.LongText
  variantDescription String?

  buyingPrice        Float?
  maximumRetailPrice Float?
  sellingPrice       Float?
  quantity           Int
  lowStockAlert      Int?   @default(5)

  expiryDate        DateTime?
  hasCashOnDelivery Boolean   @default(true)

  sizeChartId String?
  sizeChart   SizeChart? @relation(fields: [sizeChartId], references: [id], onDelete: SetNull)

  isRelatedItem Boolean @default(false)
  isActive      Boolean @default(true)
  isDefault     Boolean @default(false)
  isReturn      Boolean @default(true)

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  cartItems      Cart[]
  wishlistItems  Wishlist[]
  orderItems     OrderItem[]
  couponProducts CouponProduct[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, color, size])
  @@index([productId])
  @@index([sku])
  @@index([sizeChartId])
  @@index([isActive])
  @@index([color])
  @@index([size])
  @@map("productvariant")
}

model Cart {
  id         String   @id @default(uuid())
  userId     String
  productId  String
  variantId  String?
  quantity   Int      @default(1)
  couponCode String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant ProductVariant? @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, variantId])
  @@index([userId])
  @@index([productId])
  @@index([variantId])
  @@map("cart")
}

model Address {
  id               String   @id @default(uuid())
  mainAddress      String
  secondaryAddress String?
  landmark         String?
  pincode          String
  state            String?
  city             String?
  district         String?
  isDefault        Boolean  @default(false)
  userId           String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]

  @@index([userId])
  @@map("address")
}

model Wishlist {
  id        String   @id @default(uuid())
  userId    String
  productId String
  variantId String?
  createdAt DateTime @default(now())

  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant ProductVariant? @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, variantId])
  @@index([userId])
  @@index([productId])
  @@index([variantId])
  @@map("wishlist")
}

model ColorScheme {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())

  @@map("colorscheme")
}

model SizeChart {
  id        String   @id @default(uuid())
  name      String
  sizes     Json
  colors    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[]
  variants ProductVariant[]

  @@map("sizechart")
}

enum CouponType {
  FIXED
  PERCENTAGE
}

model Coupon {
  id            Int        @id @default(autoincrement())
  code          String     @unique
  type          CouponType
  value         Float
  minOrderValue Float?
  maxDiscount   Float?
  isStackable   Boolean    @default(false)
  isActive      Boolean    @default(true)

  startsAt  DateTime
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users      CouponUser[]
  products   CouponProduct[]
  categories CouponCategory[]
  orders     Order[]

  @@index([code])
  @@index([isActive])
  @@index([expiresAt])
  @@map("coupon")
}

model CouponUser {
  id        String    @id @default(uuid())
  couponId  Int
  userId    String
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  coupon Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([couponId, userId])
  @@index([userId])
  @@index([couponId])
  @@map("couponuser")
}

model CouponProduct {
  id        String   @id @default(uuid())
  couponId  Int
  productId String
  variantId String?
  createdAt DateTime @default(now())

  coupon  Coupon          @relation(fields: [couponId], references: [id], onDelete: Cascade)
  product Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant ProductVariant? @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@unique([couponId, productId, variantId])
  @@index([productId])
  @@index([couponId])
  @@index([variantId])
  @@map("couponproduct")
}

model CouponCategory {
  id         String   @id @default(uuid())
  couponId   Int
  categoryId String
  createdAt  DateTime @default(now())

  coupon   Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([couponId, categoryId])
  @@index([categoryId])
  @@index([couponId])
  @@map("couponcategory")
}

model Blog {
  id            String   @id @default(uuid())
  header        String
  description   String?
  content       String   @db.LongText
  thumbImage    String?
  contentImages Json?
  author        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("blog")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Order {
  id          String @id @default(uuid())
  orderNumber String @unique

  userId String
  user   User   @relation(fields: [userId], references: [id])

  addressId String
  address   Address @relation(fields: [addressId], references: [id])

  totalAmount    Float
  discountAmount Float @default(0)
  finalAmount    Float

  status        OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  paymentMethod String
  paymentId     String?

  couponId Int?
  coupon   Coupon? @relation(fields: [couponId], references: [id])

  orderItems OrderItem[]
  history    OrderHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@map("order")
}

model OrderItem {
  id      String @id @default(uuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  variantId String?
  variant   ProductVariant? @relation(fields: [variantId], references: [id])

  quantity Int
  price    Float

  size        String?
  color       String?
  deliveredAt DateTime?

  status OrderStatus @default(PENDING)

  returns            Return[]
  orderItemHistories OrderItemHistory[]

  @@map("orderitem")
}

model OrderItemHistory {
  id          String @id @default(uuid())
  orderItemId String
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)

  status  OrderStatus
  comment String?

  createdAt DateTime @default(now())
  createdBy String?

  @@map("orderitemhistory")
}

model OrderHistory {
  id      String @id @default(uuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  status  OrderStatus
  comment String?

  createdAt DateTime @default(now())
  createdBy String?

  @@map("orderhistory")
}

model Pincode {
  id        String   @id @default(uuid())
  name      String
  value     String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  groups PincodeGroupPincode[]

  @@index([value])
  @@index([name])
  @@index([isActive])
  @@map("pincode")
}

model PincodeGroup {
  id          String   @id @default(uuid())
  name        String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pincodes           PincodeGroupPincode[]
  deliveryManagement DeliveryManagement?

  @@index([name])
  @@index([isActive])
  @@map("pincodegroup")
}

model PincodeGroupPincode {
  id             String   @id @default(uuid())
  pincodeGroupId String
  pincodeId      String
  createdAt      DateTime @default(now())

  pincodeGroup PincodeGroup @relation(fields: [pincodeGroupId], references: [id], onDelete: Cascade)
  pincode      Pincode      @relation(fields: [pincodeId], references: [id], onDelete: Cascade)

  @@unique([pincodeGroupId, pincodeId])
  @@index([pincodeGroupId])
  @@index([pincodeId])
  @@map("pincodegrouppincode")
}

model AboutPageContent {
  id        String   @id @default(uuid())
  title     String
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@map("aboutpagecontent")
}

model ContactPageInformation {
  id        String   @id @default(uuid())
  label     String
  type      String
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
  @@index([label])
  @@map("contactpageinformation")
}

model PolicyPageContent {
  id        String   @id @default(uuid())
  title     String
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@map("policypagecontent")
}

model DeliveryManagement {
  id                    String   @id @default(uuid())
  pincodeGroupId        String   @unique
  deliveryCharge        Float
  estimatedDeliveryTime String
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  pincodeGroup PincodeGroup @relation(fields: [pincodeGroupId], references: [id], onDelete: Cascade)

  @@map("deliverymanagement")
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

model Review {
  id            String       @id @default(uuid())
  rating        Int          @default(5)
  comment       String?      @db.LongText
  image         String?
  status        ReviewStatus @default(PENDING)
  isHighlighted Boolean      @default(false)

  userId    String
  productId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([userId])
  @@map("review")
}

enum ReturnStatus {
  INITIATED
  APPROVED
  REJECTED
  PROCESSING
  COMPLETED
  CANCELLED
}

model Return {
  id String @id @default(uuid())

  orderItemId String
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  reason    String
  videoPath String?
  status    ReturnStatus @default(INITIATED)

  approvedRejectedAt DateTime?
  adminComment       String?

  returnableUntil    DateTime
  isReturnableWindow Boolean  @default(true)

  history ReturnHistory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderItemId])
  @@index([userId])
  @@index([status])
  @@index([returnableUntil])
  @@map("return")
}

model ReturnHistory {
  id       String @id @default(uuid())
  returnId String
  return   Return @relation(fields: [returnId], references: [id], onDelete: Cascade)

  previousStatus ReturnStatus
  newStatus      ReturnStatus
  comment        String?
  changedBy      String?

  createdAt DateTime @default(now())

  @@index([returnId])
  @@map("returnhistory")
}

model PrivacyPolicy {
  id        String   @id @default(uuid())
  title     String
  content   Json
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("privacypolicy")
}

model Service {
  id        String   @id @default(uuid())
  title     String   @unique
  summary   String
  content   Json
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@index([isActive])
  @@map("service")
}

model Disclaimer {
  id           String   @id @default(uuid())
  title        String
  categoryType String
  content      Json
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([categoryType])
  @@index([isActive])
  @@map("disclaimer")
}

model ShippingPolicy {
  id        String   @id @default(uuid())
  title     String   @unique
  content   Json
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@index([isActive])
  @@map("shippingpolicy")
}

model StoreBranding {
  id           String   @id @default(uuid())
  displayName  String   @unique
  logoPath     String?
  bannerImages Json?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("storebranding")
}
